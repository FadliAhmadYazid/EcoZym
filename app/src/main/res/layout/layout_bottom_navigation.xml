<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Floating home button positioned to be above the navigation bar -->
    <ImageView
        android:id="@+id/navHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/circle_white"
        android:padding="15dp"
        android:elevation="4dp"
        android:src="@drawable/home"
        app:tint="@color/primary"/>

    <!-- Main navigation bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/navTrash"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/waste"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/navTruck"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/truck"
            app:tint="@color/white" />

        <!-- Empty space for home button -->
        <View
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/navChart"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/bar"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/navArticle"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/guide"
            app:tint="@color/white" />
    </LinearLayout>
</RelativeLayout>